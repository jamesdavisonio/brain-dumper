rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Projects collection
    match /projects/{projectId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update: if isAuthenticated() && isOwner(resource.data.userId);
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Dump History collection
    match /dumpHistory/{entryId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // Users collection (for notification preferences, FCM tokens, etc.)
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;

      // Private subcollection for sensitive data like OAuth tokens
      // Only the user can read/write their own private data
      match /private/{document} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }

      // Calendars subcollection for connected calendar metadata
      match /calendars/{calendarId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }

      // Calendar connection status
      match /calendarConnection/{document} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }

      // User preferences (calendar, etc.)
      match /preferences/{document} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }

      // Settings subcollection for scheduling preferences
      match /settings/{settingId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }

      // Schedule proposals for approval workflow
      match /scheduleProposals/{proposalId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Calendar watch subscriptions (for webhook notifications)
    // Managed by Cloud Functions, users can read their own
    match /calendarWatches/{watchId} {
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      allow write: if false; // Only Cloud Functions can write
    }

    // OAuth state tokens (temporary, used during OAuth flow)
    // These are created and validated by Cloud Functions
    // Users should not directly access this collection
    match /oauthStates/{stateId} {
      allow read, write: if false; // Only accessible by Cloud Functions
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
